<h1>Tasks </h1>

<ul>
<% @tasks.each do |task| %>
  <li>
    <%= link_to task.title, task_path(task.id) %>
    <%= link_to "Edit a task", task_edit_path(task.id)  %>
    <%= link_to "Delete task", task_path(task.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure ?" } %>
  </li>
  <% end %>
</ul>

<%= link_to "Add a new task", tasks_new_path %>
